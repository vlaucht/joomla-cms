<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="text" label="PLG_MEDIA-ACTION_TEXT_LABEL">
		<field
				name="fontFamily"
				type="list"
				label="PLG_MEDIA-ACTION_TEXT_FONT_FAMILY_LABEL"
				default="0"
		/>

		<field
				name="fontSize"
				type="integer"
				label="PLG_MEDIA-ACTION_TEXT_FONT_SIZE_LABEL"
				first="6"
				last="16"
				step="1"
				default="13"
				filter="integer"
		/>

		<field
				name="textColor"
				type="color"
				label="PLG_MEDIA-ACTION_TEXT_FONT_SIZE_LABEL"
		/>

		<field
				name="textOptions"
				type="radio"
				label="Options"
				class="btn-group"
				default="0"
		>
			<option value="0">B</option>
			<option value="90">I</option>
			<option value="180">TT</option>
		</field>


		<field
				name="addText"
				type="textarea"
				label="Enter Text"
				class="btn-group"
				default=""
		/>


	</fieldset>
</form>
